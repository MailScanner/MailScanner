f-prot-6	/var/lib/MailScanner/f-prot-6-wrapper	/opt/f-prot
f-protd-6	/bin/false				/opt/f-prot
f-secure	/var/lib/MailScanner/f-secure-wrapper	/opt/f-secure/fsav
generic		/var/lib/MailScanner/generic-wrapper	/
inoculan	/var/lib/MailScanner/inoculan-wrapper	/usr/local/inoculan
inoculate	/var/lib/MailScanner/inoculate-wrapper	/usr/local/av
